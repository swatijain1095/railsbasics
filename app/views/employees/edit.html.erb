<div class="ms-2 me-2">
  <h1>Editing Employee</h1>
  <br/>

  <%= form_for @employee, html: {class: "form-horizontal", multipart: true} do |f| %>

      <fieldset>
        <div class="form-group row mb-3">
          <label class="col-sm-2 control-label">First Name:</label>
          <div class="col-sm-10">
            <%= f.text_field :firstname, placeholder: "Enter First Name", class: "form-control" %>
          </div>
        </div>
      </fieldset>


      <fieldset>
        <div class="form-group row mb-3">
          <label class="col-sm-2 control-label">Last Name:</label>
          <div class="col-sm-10">
            <%= f.text_field :lastname, placeholder: "Enter Last Name", class: "form-control" %>
          </div>
        </div>
      </fieldset>

      <fieldset>
        <div class="form-group row mb-3">
          <label class="col-sm-2 control-label">Has Passport:</label>
          <div class="col-sm-10">
            <div class="form-check">
              <%= f.check_box :haspassport, {class: "form-check-input"}, "t", "f" %>
            </div>
          </div>
        </div>
      </fieldset>

      <fieldset>
        <div class="form-group row mb-3">
          <label class="col-sm-2 control-label">Salary</label>
          <div class="col-sm-10">
            <%= f.text_field :salary, placeholder: "Salary", class: "form-control" %>
          </div>
        </div>
      </fieldset>

      <fieldset>
        <div class="form-group row mb-3">
          <label class="col-sm-2 control-label">Birth Date:</label>
          <div class="col-sm-10">
            <%= f.date_field :birthdate, class: "form-control" %>
          </div>
        </div>
      </fieldset>

      <fieldset>
      <div class="form-group row mb-3">
        <label class="col-sm-2 control-label">Hiring Date:</label>
        <div class="col-sm-10">
          <%= f.date_field :hiredate, class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row mb-3">
       <legend class="col-form-label col-sm-2 pt-0">Gender:</legend>
       <div class="col-sm-10">
         <div class="form-check">
         <%= f.radio_button :gender, "male", data: {toggle: 'radio'}, class: "form-check-input", id: "male" %>
           <label class="form-check-label" for="male">
           Male
           </label>
         </div>
         <div class="form-check">
         <%= f.radio_button :gender, "female", data: {toggle: 'radio'}, class: "form-check-input", id: "female" %>
           <label class="form-check-label" for="female">
           Female
           </label>
         </div>
       </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row mb-3">
        <label class="col-sm-2 control-label">Notes:</label>
        <div class="col-sm-10">
          <%= f.rich_text_area :notes, placeholder: "Enter Notes", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row mb-3">
        <label class="col-sm-2 control-label">Email:
          <span class="star">*</span>
        </label>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row mb-3">
        <label class="col-sm-2 control-label">Phone Number:
          <span class="star">*</span>
        </label>
        <div class="col-sm-10">
          <%= f.text_field :phone, autofocus: true, placeholder: "Enter Phone Number", class: "form-control" %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row mb-3">
        <label class="col-sm-2 control-label">Department:
          <span class="star">*</span>
        </label>
        <div class="col-sm-10">
          <%= f.select :department_id, options_from_collection_for_select(select_department, 'id', 'name', f.object.department_id),{include_blank: "Select Department"},class: "form-control", autofocus: true %>
        </div>
      </div>
    </fieldset>

    <fieldset>
      <div class="form-group row mb-3">
        <label class="col-sm-2 control-label">Country:
         <span class="star">*</span>
        </label>
        <div class="col-sm-10">
          <%= f.select :country_id, options_from_collection_for_select(select_country, 'id', 'name', f.object.country_id),{include_blank: "Select Country"},class: "form-control", autofocus: true %>
        </div>
      </div>
    </fieldset>

    <%= f.submit "Update Record", class: "btn btn-primary" %>
    <a href="<%= employees_path %>">Back To List</a>
  <%end%>
</div>