<div>
  <h1>Employees List</h1>
  <br/>

  <br></br>
  <% if @employees.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone</th>
          <th>Email</th>  
          <th>Actions</th>  
        </tr>
      </thead>
      <tbody>

      </tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.id %></td>
            <td><%= employee.firstname %></td>
            <td><%= employee.lastname %></td>  
            <td><%= employee.phone %></td>  
            <td><%= employee.email %></td>  
            <td>
              <a href="<%= employee_path(employee)%>">Details</a> | 
              <a href="<%= edit_employee_path(employee)%>">Edit</a> |
              </td>
          </tr>
        <% end %>
    </table>
  <% end %>
</div>