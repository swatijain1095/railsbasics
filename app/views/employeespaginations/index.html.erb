<div>
  <div>
    <%= form_tag(employeespaginations_path, method: :get) do %>
      <div class="form-group row">
        <div class="col-sm-6">
          <%= text_field_tag(:search, params[:search], placeholder: "Search ...", class: "form-control") %>
        </div>
        <div class="col-sm-6">
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="page-size-dropdown">
    <%= form_tag employeespaginations_path, method: :get, class: "form-inline" do %>
      <%= label_tag :per_page, 'Page Size', class: "mr-2" %>
      <%= select_tag :per_page, options_for_select([2, 5, 7, 9, 10], params[:per_page].to_i), { onchange: 'this.form.submit()', class: "custom-select" } %>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Department</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.firstname %></td>
          <td><%= employee.lastname %></td>
          <td><%= employee.department.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @employees %>
</div>