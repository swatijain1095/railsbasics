<div>
  <div class="page-size-dropdown">
    <%= form_tag employeespaginations_path, method: :get, class: "form-inline" do %>
      <%= label_tag :per_page, 'Page Size', class: "mr-2" %>
      <%= select_tag :per_page, options_for_select([2, 5, 7, 9, 10], params[:per_page].to_i), { onchange: 'this.form.submit()', class: "custom-select" } %>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Department</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.firstname %></td>
          <td><%= employee.lastname %></td>
          <td><%= employee.department.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @employees %>
</div>