
<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-9">
			<div class="text-center mt-4 mb-4">
				Employee List
			</div>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">First Name</th>
						<th scope="col">Last Name</th>
            <th scope="col">Salary</th>
            <th scope="col">Notes</th>
			    </tr>
			  	</thead>
			  	<tbody>
			  		<% @employees.each_with_index do |emp, index| %>
				    	<tr>
							<th scope="row"><%= index + 1 %></th>
							<td><%= emp.firstname %></td>
							<td><%= emp.lastname %></td>
              <td><%= emp.salary %></td>
              <td><%= emp.notes %></td>
				    	</tr>
				    <% end %>
				    <% unless @employees.present? %>
				    	<tr>
				    		<td colspan="4" class="text-center">No Data Found</td>
				    	</tr>
				    <% end %>
				</tbody>
			</table>	
			<div>		
			<%= link_to 'Export as PDF', export_as_path(export_type: 'pdf', format: :pdf), class: 'btn btn-primary' %>			
			<%= link_to 'Export as CSV', export_as_path(export_type: 'csv', format: :csv), class: 'btn btn-secondary' %>
			<%= link_to 'Export as TXT', export_as_path(export_type: 'txt'), class: 'btn btn-success' %>
			<%= link_to 'Export as XLS', export_as_path(export_type: 'xls', format: :xls), class: 'btn btn-danger' %>
			<%= link_to 'Export as DOCX', export_as_path(export_type: 'docx'), class: 'btn btn-warning' %>
	
			</div>
		</div>
	</div>
</div>
