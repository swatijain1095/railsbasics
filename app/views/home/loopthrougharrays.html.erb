<h1>List of Products</h1>

<table class="table">
<thead>
  <tr>
    <td>ID</td>
    <td>Name</td>
    <td>Price</td>
  </tr>
</thead>
<tbody>
  <% @Products.each do |product| %>
    <tr>
      <td><%= product[:id] %></td>
      <td><%= product[:name] %></td>
      <td><%= product[:price] %></td>
    </tr>
    <% end %>
</tbody>
</table>

<ul>
  <% @Products.each do |product| %>
    <li><%= product[:name] %></li>
  <% end %>
</ul> 

<ol>
  <% @Products.each do |product| %>
    <li><%= product[:name] %></li>
  <% end %>
</ol> 

<ol class="list-unstyled">
  <% @Products.each do |product| %>
    <li><input type="checkbox"><%= product[:name] %></li>
  <% end %>
</ol> 

<ol class="list-unstyled">
  <% @Products.each do |product| %>
    <li><input type="radio" name="name"><%= product[:name] %></li>
  <% end %>
</ol> 

<select class="form-select">
  <% @Products.each do |product| %>
    <option><%= product[:name] %></option>
  <% end %>
</select> 

<ol class="list-unstyled">
  <% @Products.each do |product| %>
    <li><input type="text" value="<%= product[:name] %>"></li>
  <% end %>
</ol> 