<div>
  <h1>Deletion of an Employee using Radio Button</h1>
  <br/>

  <% if @employees.present? %>
   <div>
   <%= form_with(url:emp_delete_singleemployeedelete_index_path, method: :delete) do |f| %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Department</th>
            <th>Country</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= radio_button_tag "employee_id", employee.id %></td>
              <td><%= employee.id %></td>
              <td><%= employee.firstname %></td>
              <td><%= employee.lastname %></td>
              <td><%= employee.phone %></td>
              <td><%= employee.email %></td>
              <td><%= employee.department.name %></td>
              <td><%= employee.country.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= f.submit "Delete using Radio Button", class: "btn btn-primary" %>
    <% end %>
    </div>
  <% end %>
</div>